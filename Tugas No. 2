print("rumus segitiga phytagoras adalah a2 + b2 = c2")
print("\n")

while True:
    try:
        sisi_a = int(input("masukan nilai sisi a : "))
        sisi_b = int(input("masukan nilai sisi b : "))
        sisi_c = int(input("masukan nilai sisi c : "))
        assert sisi_a and sisi_b and sisi_c >= 1
    except:
        print("Nilai tidak bisa minus atau 0.")
        print("\n")
    else:
        x = sisi_c ** 2
        y = sisi_a ** 2 + sisi_b ** 2

        if (x == y):
            print(x, "=", y)
            print("segitiga adalah triple phytagoras")
        else:
            print(x, "!=", y)
            print("Bukan Triple Phytagoras")
        break
