baris = int(input("Banyak baris: "))
atas = int(input("Bagian atas: "))
tengah = int(input("Bagian tengah: "))
bawah = int(input("Bagian bawah: "))
print("\n")

for i in range(1, baris):
    for j in range(1, baris + 0):
        if i == j:
            print(tengah, end=" ")
        elif i <= j:
            print(atas, end=" ")
        else:
            print(bawah, end=" ")
    print()
